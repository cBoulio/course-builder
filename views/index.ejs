<!doctype html>
<html lang="en" >
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>

    <link rel="stylesheet" type="text/css" href="../stylesheets/dynamicModNavStyles.css">  

    <script src="../javascripts/listIndexTracker.js"></script>
    <script src="../javascripts/modTracker.js"></script>

    <title>Course Builder</title>

  </head>

  <body class="container-fluid">
    <div class="row" style="height: 100%;" >

      <div class="col-2" style="background-color: aquamarine;height: 100vh;">
        
        <!--Start Body Controls-->
       <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Edit Course</h5>
          <h5 class="card-title" id="currentPanelTicker">Panel Index - 0</h5>
    
          <div class="row ml-1">
            <button class="btn btn-primary mt-2 mr-2" onClick="addMod()">Add Mod</button>
            <button class="btn btn-primary mt-2" onClick="deleteMod()">Delete Mod</button>
          </div>  

          </div>

        </div>  

       <!--Start Body Controls-->
      
      <!--Start Body Controls-->
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Current Panel Id - NaN</h5>
          <h5 class="card-title" id="xxxxx">Current Mod Id - NaN</h5>
          
          <button class="btn btn-primary mt-2" onClick="printMods()">Print All Mods</button>
          <button class="btn btn-primary mt-2" onClick="printCurrentMod()">Print Current Mod</button>
          <button class="btn btn-primary mt-2" onClick="getCurrentPanelList()">Print Current Panel lIST ID</button>
        </div>
      </div>  

    
       <!--Start Body -->
      
      </div>

      <div class="col-8 p-0 " style="background-color: blueviolet;height: 100vh;" id="dynamicMainBody">

        <!-- DYNAMIC NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul class="navbar-nav mr-auto" id="dynamicModList">
              <li class="nav-item active m-1">
                <button class="nav-link btn btn-primary" onClick="changeMods('mod0')" id="mod0">Mod-1</button>
              </li> 
            </ul>
            <span class="navbar-text">
              <button class="btn btn-primary" onClick="createMod()">+ New Mod</button>
              <button class="btn btn-primary" onClick="deleteMod()">- Delete Mod</button>
            </span>
        </nav>
        <!-- DYNAMIC NAVBAR -->
          
        
        <!-- Panel List == Mod -->
        

         <!-- END   ------ Dynamic Panel List -->
      </div> 
        <!-- Dynamic Panel List -->

      <div class="col-2" style="background-color: aquamarine;height: 100vh;">
        <!--Start Body Controls-->
        <div class="card mt-2">
          <div class="card-body">
            <h5 class="card-title" id="currentHeaderTicker">
            Header - 0
            </h5>
          <form>
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input id="inputHeader101" type="text" class="form-control" name="dynamic-header-input" placeholder="Header" onkeyup="headerInput('inputHeader101')" default="Test">
            </div>  
          </form>
          </div>  

        </div> 

      
       <!--Start Body Controls-->
       <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Edit Layout</h5>
          <h5 class="card-title" id="currentPanelTicker">Current Panel - 0</h5>
          <button class="btn btn-primary mt-2" onclick="downLayout()">Down</button>
          <button class="btn btn-primary mt-2" onclick="upLayout()">Up</button>
          <button class="btn btn-primary mt-2" onclick="applyLayout()">Apply</button>


          <button class="btn btn-primary mt-2" onclick="createPanel()">Create Panel Test</button>


          <div class="row">
            <button class="btn btn-primary mt-2 mr-2" onClick="scrolledUp()">Scroll Up</button>
            <button class="btn btn-primary mt-2" onClick="scrolledDown()">scroll Down</button>
  
          </div>  
         
          <h5 class="card-title mt-1">Fields</h5>

            <div id="dynamic-fields">
              

            </div>
          </div>
        </div>  

      

       <!--Start Body Controls-->
       <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title" id="currentFooterTicker">
          Footer - 0
        </h5>
        <form>
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input id="inputFooter101" type="text" class="form-control" name="dynamic-footer-input" placeholder="Footer 1" onkeyup="footerInput('inputFooter101')">
          </div>
        </form>
      </div>  

     </div> 
     <!--Start Body Controls-->
        </div>
        
        </div>

          
      </div>
      <!--End Body Controls-->
      
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
